<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.App.DayNightBase" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/white</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorSecondary">@color/textColorTertiary</item>
        <item name="android:statusBarColor">@color/colorPrimaryDark</item>
        <item name="android:navigationBarColor">@color/sec_white</item>
        <item name="android:windowBackground">@drawable/selector</item>
        <item name="textInputStyle">@style/Base.Widget.MaterialComponents.TextInputLayout</item>
        <item name="checkboxStyle">@style/AppCheckBox</item>
        <item name="bottomSheetDialogTheme">@style/CustomBottomSheetDialog</item>



    </style>


    <style name="Theme.Splash" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/white</item>
        <item name="colorAccent">@color/white</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorSecondary">@color/textColorTertiary</item>
        <item name="windowActionBar">false</item>
        <item name="android:statusBarColor">@color/sec_white</item>
        <item name="android:navigationBarColor">@color/sec_white</item>

        <!--        <item name="android:windowBackground">@drawable/window_background</item>-->

        <item name="textInputStyle">@style/Base.Widget.MaterialComponents.TextInputLayout</item>
        <item name="checkboxStyle">@style/AppCheckBox</item>

    </style>

    <style name="Theme.App.DayNight" parent="Theme.App.DayNightBase">
        <item name="android:statusBarColor">@color/colorPrimaryDark</item>
    </style>

    <style name="AppCheckBox" parent="Widget.MaterialComponents.CompoundButton.CheckBox">
        <item name="android:minWidth">32dp</item>
        <item name="android:minHeight">32dp</item>
    </style>



    <style name="MyCustomTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="tabIndicatorColor">@color/white</item>
        <item name="textAllCaps">false</item>
    </style>

    <color name="textColorLight">#383838</color>
</resources>