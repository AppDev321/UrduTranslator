    <style name="AlertDialogBaseTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowBackground">@color/alert_dialog_bg</item>
        <item name="colorAccent">@color/dialog_box_text_and_control_color</item>
        <item name="android:colorAccent">@color/dialog_box_text_and_control_color</item>
        <item name="android:textColor">@color/dialog_box_text_and_control_color</item>
